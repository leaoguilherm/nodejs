{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "max-len": [
        "warn",
        {
          "code": 120,
          "ignoreComments": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "error"
          ]
        }
      ],
      "sort-imports": [
        2,
        {
          "ignoreCase": false,
          "ignoreMemberSort": false,
          "ignoreDeclarationSort": true
        }
      ],
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  }